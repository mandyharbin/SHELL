-- WARNING: This schema is for context only and is not meant to be run.
-- Table order and constraints may not be valid for execution.

CREATE TABLE kb.kb_article_categories (
  article_id uuid NOT NULL,
  category_id uuid NOT NULL,
  CONSTRAINT kb_article_categories_pkey PRIMARY KEY (article_id, category_id),
  CONSTRAINT kb_article_categories_article_id_fkey FOREIGN KEY (article_id) REFERENCES kb.kb_articles(id),
  CONSTRAINT kb_article_categories_category_id_fkey FOREIGN KEY (category_id) REFERENCES kb.kb_categories(id)
);
CREATE TABLE kb.kb_articles (
  id uuid NOT NULL DEFAULT gen_random_uuid(),
  tenant_id uuid NOT NULL,
  title text NOT NULL,
  slug text NOT NULL,
  content jsonb DEFAULT '{}'::jsonb,
  content_text text DEFAULT COALESCE((content ->> 'text'::text), ''::text),
  status text NOT NULL DEFAULT 'draft'::text,
  visibility text NOT NULL DEFAULT 'private'::text,
  created_by uuid,
  updated_by uuid,
  created_at timestamp with time zone DEFAULT now(),
  updated_at timestamp with time zone DEFAULT now(),
  deleted_at timestamp with time zone,
  search_vector tsvector,
  CONSTRAINT kb_articles_pkey PRIMARY KEY (id)
);
CREATE TABLE kb.kb_attachments (
  id uuid NOT NULL DEFAULT gen_random_uuid(),
  article_id uuid NOT NULL,
  tenant_id uuid NOT NULL,
  storage_path text NOT NULL,
  metadata jsonb DEFAULT '{}'::jsonb,
  created_at timestamp with time zone DEFAULT now(),
  CONSTRAINT kb_attachments_pkey PRIMARY KEY (id),
  CONSTRAINT kb_attachments_article_id_fkey FOREIGN KEY (article_id) REFERENCES kb.kb_articles(id)
);
CREATE TABLE kb.kb_categories (
  id uuid NOT NULL DEFAULT gen_random_uuid(),
  tenant_id uuid NOT NULL,
  name text NOT NULL,
  slug text NOT NULL,
  parent_id uuid,
  created_at timestamp with time zone DEFAULT now(),
  CONSTRAINT kb_categories_pkey PRIMARY KEY (id)
);
CREATE TABLE kb.kb_revisions (
  id uuid NOT NULL DEFAULT gen_random_uuid(),
  article_id uuid NOT NULL,
  tenant_id uuid NOT NULL,
  content jsonb NOT NULL,
  diff jsonb,
  created_by uuid,
  created_at timestamp with time zone DEFAULT now(),
  CONSTRAINT kb_revisions_pkey PRIMARY KEY (id),
  CONSTRAINT kb_revisions_article_id_fkey FOREIGN KEY (article_id) REFERENCES kb.kb_articles(id)
);
CREATE TABLE kb.lexicons (
  id uuid NOT NULL DEFAULT gen_random_uuid(),
  tenant_id uuid NOT NULL,
  category text NOT NULL,
  keywords jsonb DEFAULT '[]'::jsonb,
  phrases jsonb DEFAULT '[]'::jsonb,
  route_to_role text NOT NULL DEFAULT 'admin'::text,
  weight numeric DEFAULT 0.80,
  is_active boolean DEFAULT true,
  created_by uuid,
  created_at timestamp with time zone DEFAULT now(),
  CONSTRAINT lexicons_pkey PRIMARY KEY (id)
);
CREATE TABLE kb.patient_fhir_map (
  auth_user_id uuid NOT NULL,
  fhir_patient_id text NOT NULL,
  tenant_id uuid,
  created_at timestamp with time zone DEFAULT now(),
  CONSTRAINT patient_fhir_map_pkey PRIMARY KEY (auth_user_id)
);
CREATE TABLE kb.routing_policies (
  id uuid NOT NULL DEFAULT gen_random_uuid(),
  tenant_id uuid NOT NULL,
  policy_name text NOT NULL,
  category text,
  confidence_threshold numeric DEFAULT 0.75,
  route_to_role text NOT NULL DEFAULT 'admin'::text,
  requires_business_hours boolean DEFAULT false,
  sla_minutes integer DEFAULT 30,
  notification_methods jsonb DEFAULT '[]'::jsonb,
  is_active boolean DEFAULT true,
  created_by uuid,
  created_at timestamp with time zone DEFAULT now(),
  CONSTRAINT routing_policies_pkey PRIMARY KEY (id)
);
CREATE TABLE kb.tenant_users (
  id uuid NOT NULL DEFAULT gen_random_uuid(),
  tenant_id uuid NOT NULL,
  user_id uuid NOT NULL,
  role text NOT NULL DEFAULT 'reader'::text,
  created_at timestamp with time zone DEFAULT now(),
  CONSTRAINT tenant_users_pkey PRIMARY KEY (id),
  CONSTRAINT tenant_users_tenant_id_fkey FOREIGN KEY (tenant_id) REFERENCES kb.tenants(id)
);
CREATE TABLE kb.tenants (
  id uuid NOT NULL DEFAULT gen_random_uuid(),
  name text NOT NULL,
  slug text NOT NULL UNIQUE,
  metadata jsonb DEFAULT '{}'::jsonb,
  created_at timestamp with time zone DEFAULT now(),
  CONSTRAINT tenants_pkey PRIMARY KEY (id)
);
